<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <color name="a_back">#eee</color>
    <color name="a_text">#000</color>
    <color name="aurora">#25bfff</color>
    <color name="w_back">#222</color>
    <color name="w_text">#fff</color>
    <color name="winston">#da4000</color>
    <color name="n_back">#eee</color>
    <color name="n_text">#222</color>
    <color name="nona">#0b0</color>
    
    <style name="Aurora" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/a_back</item>
        <item name="android:popupBackground">@color/a_back</item>
        <item name="android:itemBackground">@drawable/a_menu_color</item>
        <item name="android:textColor">@color/a_text</item>
    </style>
    <style name="Winston" parent="android:Theme.Black">
        <item name="android:windowBackground">@color/w_back</item>
        <item name="android:popupBackground">@color/w_back</item>
        <item name="android:itemBackground">@drawable/w_menu_color</item>
        <item name="android:textColor">@color/w_text</item>
    </style>
    <style name="Nona" parent="android:Theme.Holo.Light">
        <item name="android:windowBackground">@color/n_back</item>
        <item name="android:popupBackground">@color/n_back</item>
        <item name="android:itemBackground">@drawable/n_menu_color</item>
        <item name="android:textColor">@color/n_text</item>
    </style>
</resources>
